<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" referrerpolicy="no-referrer"></script>
</head>
<body>
    <div>
        <h2>Login User</h2>
        <form>
            <div>
                <label>Usuario: </label>
                <input id="user" type="email" value="Ingresa tu usuario" required />
            </div>
            <div>
                <label>Contraseña: </label>
                <input id="pass" type="password" value="Ingresa tu usuario" required />
            </div>
            <button id="btn">Ingresar</button>
        </form>
        <div id="respuesta"></div>
    </div>

    <script>
        $(document).ready(function () {
            $('#btn').on("click", function (e) {
                e.preventDefault();
                var user = $("#user").val();
                var pass = $("#pass").val();
                var datos = {
                    usuarioId: user,
                    pass: pass
                }

                $.ajax({
                    method: "POST",
                    url: "/api/login",
                    data: JSON.stringify(datos),
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    },
                    success: function (res) {
                        //if (res == 1) {
                        //    alert("succes!")                
                        //}
                        //else {
                        //    aler("user or password invalid");
                        //}
                        alert(res);
                    }
                });
            })
        });

    </script>
</body>
</html>